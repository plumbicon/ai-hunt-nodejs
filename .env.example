# Database connection settings
DB_HOST=localhost
# Note: DB_PORT is the port exposed on the HOST machine for tests and external clients.
# The internal application uses port 5432 to connect to the database.
DB_PORT=5433
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Required for running the test suite
DB_NAME_TEST=your_test_db_name

# Application settings
NODE_ENV=development
PORT=6000

# JSON Web Token secret
# Replace with a long random string in production
JWT_ACCESS_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Create a default admin user on startup (true|false)
# If true, the server will check for an admin account on startup and create one with a temporary password if none exists.
# In production, set to false and create admin accounts via a secure process/seed.
CREATE_ADMIN=true
DEFAULT_ADMIN_EMAIL=admin@example.com

# BCrypt salt rounds (integer)
SALT_ROUNDS=10

# === Production example (optional) ===
# You can provide a single connection string for production if preferred:
# DATABASE_URL=postgres://user:password@host:port/dbname
